#!/usr/bin/env bash

# if it's sourced by MakeFile
if [ `dirname $0` = "/bin" ] 
	then       ROOT="./"
	else local ROOT=`dirname $0`
fi

export PYTHONPATH="${ROOT}:${ROOT}/Sources/:${ROOT}/Webapp/"

export BP_SETTINGS="settings"

export WEBAPP_SETTINGS="webapp_settings.py"

# load .env_dev if exists
if [ -f "${ROOT}/.env_dev" ]
	then . "${ROOT}/.env_dev"
fi

. "${ROOT}/venv/bin/activate"

